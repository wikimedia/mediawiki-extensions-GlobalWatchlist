{
	"name": "GlobalWatchlist",
	"author": [
		"DannyS712"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:GlobalWatchlist",
	"descriptionmsg": "globalwatchlist-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"SpecialPages": {
		"GlobalWatchlist": "MediaWiki\\Extension\\GlobalWatchlist\\SpecialGlobalWatchlist",
		"GlobalWatchlistSettings": "MediaWiki\\Extension\\GlobalWatchlist\\SpecialGlobalWatchlistSettings"
	},
	"HookHandlers": {
		"GlobalWatchlistHooks": {
			"class": "MediaWiki\\Extension\\GlobalWatchlist\\GlobalWatchlistHooks",
			"services": [
				"SpecialPageFactory"
			]
		}
	},
	"Hooks": {
		"SkinBuildSidebar": {
			"handler": "GlobalWatchlistHooks"
		}
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\GlobalWatchlist\\": "includes/"
	},
	"MessagesDirs": {
		"GlobalWatchlist": [
			"i18n",
			"i18n/api",
			"i18n/script"
		]
	},
	"ExtensionMessagesFiles": {
		"GlobalWatchlistAliases": "GlobalWatchlist.alias.php"
	},
	"APIModules": {
		"globalwatchlistsettings": {
			"class": "MediaWiki\\Extension\\GlobalWatchlist\\ApiGlobalWatchlistSettings",
			"factory": "MediaWiki\\Extension\\GlobalWatchlist\\ApiGlobalWatchlistSettings::newFromGlobalState",
			"services": [
				"GlobalWatchlistSettingsManager"
			]
		}
	},
	"ServiceWiringFiles": [
		"includes/ServiceWiring.php"
	],
	"ResourceFileModulePaths": {
		"localBasePath": "modules",
		"remoteExtPath": "GlobalWatchlist/modules"
	},
	"ResourceModules": {
		"ext.globalwatchlist.specialglobalwatchlist": {
			"scripts": "ext.globalwatchlist.specialglobalwatchlist.js"
		},
		"ext.globalwatchlist.specialglobalwatchlistsettings": {
			"packageFiles": [
				"ext.globalwatchlist.specialglobalwatchlistsettings.js",
				"ext.globalwatchlist.debug.js",
				"ext.globalwatchlist.getSettings.js",
				"ext.globalwatchlist.saveSettings.js",
				"ext.globalwatchlist.notifications.js"
			],
			"styles": [
				"ext.globalwatchlist.common.css",
				"ext.globalwatchlist.specialglobalwatchlistsettings.css"
			],
			"messages": [
				"globalwatchlist-add",
				"globalwatchlist-changetypes",
				"globalwatchlist-filters",
				"globalwatchlist-filter-anon",
				"globalwatchlist-filter-bot",
				"globalwatchlist-filter-either",
				"globalwatchlist-filter-minor",
				"globalwatchlist-filter-not-anon",
				"globalwatchlist-filter-not-bot",
				"globalwatchlist-filter-not-minor",
				"globalwatchlist-filter-only-anon",
				"globalwatchlist-filter-only-bot",
				"globalwatchlist-filter-only-minor",
				"globalwatchlist-globalwatchlistbacklink",
				"globalwatchlist-notify-heading",
				"globalwatchlist-notify-savingfailed",
				"globalwatchlist-notify-settingssaved",
				"globalwatchlist-option-grouppage",
				"globalwatchlist-option-confirmallsites",
				"globalwatchlist-option-fastmode",
				"globalwatchlist-otheroptions",
				"globalwatchlist-remove",
				"globalwatchlist-resetchanges",
				"globalwatchlist-save",
				"globalwatchlist-show-edits",
				"globalwatchlist-show-logentries",
				"globalwatchlist-show-newpages",
				"globalwatchlist-sitelist"
			],
			"dependencies": [
				"mediawiki.api",
				"oojs-ui-core",
				"oojs-ui-widgets",
				"oojs-ui-windows",
				"oojs-ui.styles.icons-movement",
				"oojs-ui.styles.icons-interactions",
				"oojs-ui.styles.icons-content",
				"oojs-ui.styles.icons-media",
				"oojs-ui.styles.icons-moderation"
			]
		}
	},
	"manifest_version": 2
