{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"Promise": false,
		"GlobalWatchlistWikibaseHandler": false,
		"GlobalWatchlistEntryEdits": false,
		"GlobalWatchlistEntryLog": false,
		"GlobalWatchlistSiteBase": false,
		"GlobalWatchlistSiteDisplay": false,
		"GlobalWatchlistSiteVue": false
	},
	"rules": {
		"no-implicit-globals": "off",
		"valid-jsdoc": [
			"error",
			{
				"requireParamDescription": false,
				"requireReturn": false,
				"requireReturnDescription": false
			}
		],
		"jsdoc/no-undefined-types": [
			"error",
			{
				"definedTypes": [
					"GlobalWatchlistDebugger",
					"GlobalWatchlistEntryBase",
					"GlobalWatchlistLinker",
					"GlobalWatchlistWatchlistUtils"
				]
			}
		],
		"vue/multi-word-component-names": "off",
		"vue/no-boolean-default": "off",
		"vue/require-explicit-emits": "off"
	},
	"settings": {
		"polyfills": [
			"Promise"
		]
	}
}
