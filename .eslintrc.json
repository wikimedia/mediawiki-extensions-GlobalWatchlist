{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"mw": false,
		"OO": false,
		"Promise": false
	},
	"rules": {
		"no-implicit-globals": "off",
		"valid-jsdoc": "off",
		"vars-on-top": "off",
		"one-var": "off"
	},
	"overrides": [
		{
			"files": [ "**/*.vue" ],
			"extends": "wikimedia/vue-es5",
			"rules": {
				"vue/html-self-closing": [ "error", {
					"html": {
						"void": "never",
						"normal": "never",
						"component": "never"
					}
				} ],
				"vue/v-bind-style": [ "warn", "longform" ],
				"vue/v-on-style": [ "warn", "longform" ],
				"vue/v-slot-style": [ "warn", "longform" ],
				"no-implicit-globals": "off",
				"vars-on-top": "off",
				"one-var": "off",
				"es/no-promise": "off"
			}
		}
	]
}