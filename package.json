{
	"private": true,
	"scripts": {
		"start-storybook": "start-storybook -p 6006",
		"test": "npm run lint",
		"lint": "npm run lint:eslint && npm run lint:styles && npm run lint:i18n",
		"lint:eslint": "eslint --cache --max-warnings 0 .",
		"lint:styles": "stylelint '**/*.{css,less}'",
		"lint:i18n": "banana-checker --requireLowerCase=0 i18n/",
		"selenium-daily": "npm run selenium-test",
		"selenium-test": "wdio tests/selenium/wdio.conf.js",
		"doc": "npm run doc:jsdoc && npm run doc:storybook",
		"doc:jsdoc": "jsdoc -c jsdoc.json",
		"doc:storybook": "build-storybook --quiet --loglevel warn -o docs/ui"
	},
	"devDependencies": {
		"@babel/core": "7.11.6",
		"@storybook/addon-a11y": "6.2.9",
		"@storybook/addon-actions": "6.2.9",
		"@storybook/addon-backgrounds": "6.2.9",
		"@storybook/addon-controls": "6.2.9",
		"@storybook/addon-docs": "6.2.9",
		"@storybook/addon-storysource": "6.2.9",
		"@storybook/addon-viewport": "6.2.9",
		"@storybook/vue": "6.2.9",
		"@wdio/cli": "7.4.6",
		"@wdio/dot-reporter": "7.4.2",
		"@wdio/junit-reporter": "7.4.2",
		"@wdio/local-runner": "7.4.6",
		"@wdio/mocha-framework": "7.4.6",
		"@wdio/sync": "7.4.6",
		"@wikimedia/wvui": "0.3.0",
		"eslint": "7.23.0",
		"eslint-config-wikimedia": "0.20.0",
		"grunt-banana-checker": "0.9.0",
		"jsdoc": "3.6.7",
		"jsdoc-wmf-theme": "0.0.3",
		"storybook": "6.3.2",
		"stylelint-config-wikimedia": "0.11.1",
		"typescript": "4.0.3",
		"vue": "2.6.11",
		"vue-loader": "15.9.3",
		"vue-template-compiler": "2.6.11",
		"wdio-mediawiki": "1.1.1",
		"webdriverio": "7.4.6"
	},
	"eslintIgnore": [
		"vendor/**"
	]
}
